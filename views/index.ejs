<%- include('./partials/header.ejs') %>
<nav class="border fixed split-nav">
    <div class="nav-brand">
        <h3><a>Reports make life better</a>
        </h3>
    </div>

    <div class="collapsible-body">
        <ul class="inline">
            <% if (user_email) { %>
            <span class="glyphicon glyphicon-user"></span>
            <li>
                <p style="text-align:right"><%= user_email %> is already login</p>
            </li>
            <li>
                <form method="POST" action="auth/logout">
                    <input type="submit" value="Logout">
                </form>
            </li>
            <% } else { %>
            <li>
                <p style="text-align:center">Please login first!</p>
            </li>
            <li>
                <form method="GET" action="auth/login">
                    <input type="submit" value="Login / Register here">
                </form>
            </li>
            <% } %>

        </ul>
    </div>
</nav>
<h1 style="padding-top: 5%;"><b>Daily behavior</b></h1>
<h3>This application provides users an opportunity to report behavior daily. </h3>
<% if (user_email) { %>
    <a href="/behavior/summary">Your Summary has been Generated!</a>
<% if (mood_today && mood_yesterday) { %>
<% if (mood_today >= mood_yesterday) { %>
<h3 style="color:blueviolet">things are looking bright today</h3>
<% } else { %>
<h3 style="color:green">things are looking gloomy today</h3>
<% } %>
<ul>
    <li>
        <b>Today's mood: <%= mood_today %></b>
    </li>
    <li>
        <b>Yesterday's mood: <%= mood_yesterday %></b>
    </li>
</ul>
<% } else { %>
<h3 style="color:red">No status on today or yesterday so far</h3>
<% } %>
<form method="GET" action="behavior/reporting">
    <input type="submit" value="Fill the form!">
</form>
<% } %>
<%- include('./partials/footer.ejs') %>